extends base.pug

block scripts  
    script(src='/static/index.js') 

block style 
    style 
        include ../static/contactstyle.css 

block content  
    .container 
        h1 Contact Us 
        form(action="/contact", method="post" class="myForm") 
            input(type="text" class="myInput" name="name" placeholder="Type your name here")
            input(type="phone" class="myInput" name="phone" placeholder="Type your phone number here")
            input(type="email" class="myInput" name="email" placeholder="Type your email id here")
            input(type="text" class="myInput" name="address" placeholder="Type your address here")
            input(type="text" class="myInput" name="desc" placeholder="Type your concern here")
            Button(class="btn")
                | Submit 
